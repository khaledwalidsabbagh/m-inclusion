<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    app:cardCornerRadius="8dp"

    android:background="@drawable/menu_item_description_box"
    android:elevation="6dp"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="true"
    app:layout_collapseMode="parallax"
    android:id="@+id/card_widget_wrapper"
    android:clickable="true">


    <ImageView
        android:id="@+id/menu_item_picture"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="4dp"
        android:scaleType="centerCrop" />

        <LinearLayout
            android:id="@+id/description_area"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@drawable/menu_item_description_box"
            android:elevation="8dp"
            android:orientation="vertical"
            android:padding="6dp">

            <TextView
                android:id="@+id/dish_item_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:elevation="4dp"
                android:text=""
                android:textColor="@color/textLight"
                android:textSize="14dp" />
            <!--android:fontFamily="casual" -->

            <TextView
                android:id="@+id/dish_item_cost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=""
                android:textColor="@color/textLight"
                android:textSize="10sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>